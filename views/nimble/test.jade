html(lang='en',ng-app='nimble')
  head
    meta(charset='utf-8')
    title test api nimble
    // CSS libs, templates and favicons
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/nimble/nimble.css'))
  body
    header#header
        .navbar.navbar-fixed-top.gray-navbar.blue-navbar
            .container
              .navbar-header
                //
                   Responsive Menu
                button#nav-toggle.navbar-toggle(type='button', data-toggle='collapse', data-target='#navigation-menu')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                //
                   Logo Image
                a.navbar-brand.elecyrLogo(href='#')
                  | Test Nimble API

              //
                 Navigation Menu
              nav#navigation-menu.collapse.navbar-collapse(role='navigation')
                ul#navList.nav.navbar-nav.navbar-right
                  li(ng-class='{"active": $root.title=="contacts"}')
                    a(href='contacts') Contacts
                  li(ng-class='{"active": $root.title=="notes"}')
                    a(href='notes') Notes
                  li
                    a(href='tasks') Tasks

    section.main-nimble
        div.container(ng-view,autoscroll='true')
        div.container
          .row.text-center
            .loading-spiner-holder(data-loading='')
              .loading-spiner
                img(src='../images/preload.gif', alt='')


    script
      var code = '#{code}';
    script(src='/libs/jquery/jquery-2.1.0.min.js', type='text/javascript')
    script(src='/libs/bootstrap/bootstrap.min.js', type='text/javascript')
    script(src='/libs/angular/angular.min.js', type='text/javascript')
    script(src='/libs/misc/nimble-test.js', type='text/javascript')
    block scripts

